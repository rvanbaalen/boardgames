---
interface Props {
  id: string;
  title: string;
  description: string;
  descriptionEn: string;
  players: string;
  duration: string;
  available: boolean;
}

const { id, title, description, descriptionEn, players, duration, available } = Astro.props;
---

<article class="game-card">
  <div class="game-icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="8" height="8" rx="1" />
      <rect x="14" y="2" width="8" height="8" rx="1" />
      <rect x="2" y="14" width="8" height="8" rx="1" />
      <rect x="14" y="14" width="8" height="8" rx="1" />
      <circle cx="5" cy="5" r="1" fill="currentColor" />
      <circle cx="19" cy="5" r="1" fill="currentColor" />
      <circle cx="17" cy="3" r="1" fill="currentColor" />
      <circle cx="17" cy="7" r="1" fill="currentColor" />
      <circle cx="5" cy="17" r="1" fill="currentColor" />
      <circle cx="3" cy="19" r="1" fill="currentColor" />
      <circle cx="7" cy="15" r="1" fill="currentColor" />
      <circle cx="17" cy="17" r="1" fill="currentColor" />
      <circle cx="19" cy="19" r="1" fill="currentColor" />
      <circle cx="15" cy="15" r="1" fill="currentColor" />
      <circle cx="19" cy="15" r="1" fill="currentColor" />
      <circle cx="15" cy="19" r="1" fill="currentColor" />
    </svg>
  </div>

  <h2>{title}</h2>

  <p class="description">{description}</p>
  <p class="description-en">{descriptionEn}</p>

  <div class="meta">
    <span class="meta-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
        <circle cx="9" cy="7" r="4"></circle>
        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
      </svg>
      {players} players
    </span>
    <span class="meta-item">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
      {duration}
    </span>
  </div>

  {available ? (
    <a href={`/${id}`} class="play-button">
      Open Score Card
    </a>
  ) : (
    <span class="coming-soon">Coming Soon</span>
  )}
</article>

<style>
  .game-card {
    background: var(--color-bg-card);
    border-radius: 1rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .game-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .game-icon {
    color: var(--color-primary);
  }

  h2 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .description {
    color: var(--color-text);
    line-height: 1.6;
  }

  .description-en {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    font-style: italic;
    line-height: 1.5;
  }

  .meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .play-button {
    display: inline-block;
    background: var(--color-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    text-align: center;
    transition: background 0.2s;
    margin-top: auto;
  }

  .play-button:hover {
    background: var(--color-primary-dark);
  }

  .coming-soon {
    display: inline-block;
    background: var(--color-bg);
    color: var(--color-text-muted);
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-align: center;
    font-weight: 500;
    margin-top: auto;
  }
</style>
