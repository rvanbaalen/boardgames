  }

  .scoring-table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }

  .scoring-table th,
  .scoring-table td {
    padding: 0.75rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .scoring-table th {
    color: #f9ed69;
    font-weight: 600;
  }

  .scoring-table td:last-child {
    text-align: right;
    font-family: 'Space Mono', monospace;
    color: #08d9d6;
  }

  .scoring-table tr:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .article-footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .article-footer h2 {
    color: #f9ed69;
  }

  @media (max-width: 640px) {
    .rules-article h1 {
      font-size: 1.875rem;
    }

    .rules-page {
      padding: 1rem;
    }
  }
</style>
