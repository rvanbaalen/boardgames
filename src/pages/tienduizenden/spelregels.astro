    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-block;
    background: linear-gradient(135deg, #08d9d6, #06b6b3);
    color: #1a1a2e;
    padding: 0.875rem 1.75rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(8, 217, 214, 0.3);
  }

  .cta-large {
    font-size: 1.125rem;
    padding: 1rem 2rem;
  }

  section {
    margin-bottom: 2.5rem;
  }

  h2 {
    font-size: 1.5rem;
    color: #08d9d6;
    margin-bottom: 1rem;
  }

