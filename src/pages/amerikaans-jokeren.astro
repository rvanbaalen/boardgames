---
import Layout from '../layouts/Layout.astro';
import AmerikaansJokerenGame from '../components/AmerikaansJokerenGame';

const gameSchema = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Amerikaans Jokeren Score Card",
  "alternateName": ["American Jokers Score Card", "Joker Card Game Scoresheet"],
  "description": "Digital score tracking app for Amerikaans Jokeren, a classic Dutch card game. Track player scores, rounds, and game progress offline.",
  "url": "https://rvanbaalen.github.io/boardgames/amerikaans-jokeren",
  "applicationCategory": "GameApplication",
  "operatingSystem": "Any",
  "browserRequirements": "Requires JavaScript",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR"
  },
  "author": {
    "@type": "Person",
    "name": "Robin van Baalen",
    "url": "https://robinvanbaalen.nl"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5",
    "ratingCount": "1"
  },
  "about": {
    "@type": "Game",
    "name": "Amerikaans Jokeren",
    "alternateName": ["American Jokers", "Joker Card Game"],
    "description": "A classic Dutch card game where players try to be the first to go out each round. Remaining cards count as penalty points - lowest total score wins.",
    "numberOfPlayers": {
      "@type": "QuantitativeValue",
      "minValue": 2,
      "maxValue": 8
    },
    "gameItem": {
      "@type": "Thing",
      "name": "Playing cards with jokers"
    }
  }
};
---

<Layout
  title="Amerikaans Jokeren Score Card - Free Online Card Game Tracker"
  description="Free digital score card for Amerikaans Jokeren. Track player scores, rounds, and game history. Works offline, no account needed."
  canonicalPath="/amerikaans-jokeren"
  schema={gameSchema}
  lang="nl"
>
  <AmerikaansJokerenGame client:only="react" />

  <noscript>
    <div class="noscript-message">
      <h2>JavaScript vereist</h2>
      <p>Deze scorekaart heeft JavaScript nodig om te werken. Schakel JavaScript in om de Amerikaans Jokeren scorekaart te gebruiken.</p>
    </div>
  </noscript>
</Layout>

<style is:global>
  .noscript-message {
    padding: 2rem;
    text-align: center;
    color: var(--text-light);
  }

  .noscript-message h2 {
    margin-bottom: 1rem;
    color: var(--accent-yellow);
  }

  /* Amerikaans Jokeren Game Styles */
  :root {
    --bg-dark: #1a1a2e;
    --bg-card: #16213e;
    --accent-red: #e94560;
    --accent-yellow: #f9ed69;
    --accent-green: #08d9d6;
    --accent-purple: #b537f2;
    --text-light: #eaeaea;
    --text-muted: #8892b0;
    --winner-gold: #ffd700;
  }

  html, body {
    height: 100%;
    overflow: hidden;
  }

  body {
    font-family: 'Fredoka', system-ui, -apple-system, sans-serif;
    background: var(--bg-dark);
    background-image:
      radial-gradient(circle at 20% 80%, rgba(233, 69, 96, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, rgba(8, 217, 214, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(181, 55, 242, 0.05) 0%, transparent 70%);
    color: var(--text-light);
    min-height: 100vh;
    min-height: 100dvh;
    -webkit-tap-highlight-color: transparent;
  }

  .game-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    min-height: 100dvh;
  }

  /* Header */
  .game-header {
    padding: 1rem;
    text-align: center;
    background: linear-gradient(180deg, rgba(22, 33, 62, 0.9) 0%, transparent 100%);
    position: relative;
    z-index: 10;
  }

  .game-header h1 {
    font-family: 'Space Mono', monospace, system-ui;
    font-size: 1.6rem;
    background: linear-gradient(135deg, var(--accent-yellow), var(--accent-red));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin: 0;
  }

  .card-icon {
    flex-shrink: 0;
    animation: wiggle 3s ease-in-out infinite;
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(-3deg); }
    50% { transform: rotate(3deg); }
  }

  .target-score {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-top: 0.25rem;
  }

  /* Main content */
  .game-main {
    flex: 1;
    overflow-x: auto;
    overflow-y: hidden;
    padding: 0.5rem 1rem 1rem;
    -webkit-overflow-scrolling: touch;
  }

  /* Player Cards */
  .players-list {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
    height: 100%;
    min-height: 0;
  }

  .player-card {
    background: var(--bg-card);
    border-radius: 16px;
    padding: 1rem;
    position: relative;
    overflow: hidden;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    flex: 1;
    min-width: 160px;
    max-width: 280px;
    display: flex;
    flex-direction: column;
  }

  .player-card.winner {
    border-color: var(--winner-gold);
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.4);
    animation: pulse-winner 1s ease-in-out infinite;
  }

  .player-card.loser {
    border-color: var(--accent-red);
    opacity: 0.7;
  }

  @keyframes pulse-winner {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }

  .player-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .player-name-input {
    background: transparent;
    border: none;
    color: var(--text-light);
    font-family: inherit;
    font-size: 1.1rem;
    font-weight: 600;
    width: 100%;
    max-width: 120px;
    padding: 0.25rem;
    border-radius: 4px;
    text-align: center;
  }

  .player-name-input:focus {
    outline: none;
    background: rgba(255,255,255,0.1);
  }

  .btn-delete-small {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 24px;
    height: 24px;
    border: none;
    border-radius: 50%;
    background: transparent;
    color: var(--text-muted);
    font-size: 1.2rem;
    line-height: 1;
    cursor: pointer;
    opacity: 0.4;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn-delete-small:hover {
    opacity: 1;
    background: rgba(233, 69, 96, 0.2);
    color: var(--accent-red);
  }

  .player-rank {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .rank-1 { background: var(--winner-gold); color: var(--bg-dark); }
  .rank-2 { background: #c0c0c0; color: var(--bg-dark); }
  .rank-3 { background: #cd7f32; color: var(--bg-dark); }
  .rank-other { background: var(--text-muted); color: var(--bg-dark); }

  .player-score {
    font-family: 'Space Mono', monospace, system-ui;
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent-yellow);
    text-align: center;
    margin: 0.5rem 0;
  }

  .player-card.winner .player-score {
    color: var(--winner-gold);
  }

  .winner-badge {
    position: absolute;
    top: -5px;
    right: -5px;
    background: var(--winner-gold);
    color: var(--bg-dark);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    transform: rotate(15deg);
  }

  .progress-bar {
    height: 6px;
    background: rgba(255,255,255,0.1);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--accent-green), var(--accent-purple));
    border-radius: 3px;
    transition: width 0.5s ease;
  }

  .progress-fill.danger {
    background: linear-gradient(90deg, var(--accent-yellow), var(--accent-red));
  }

  /* Score History */
  .score-history {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin: 0.5rem 0;
    padding: 0.5rem;
    border-radius: 8px;
    background: rgba(0,0,0,0.2);
    overflow-y: auto;
    min-height: 60px;
  }

  .history-empty {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-align: center;
    opacity: 0.6;
  }

  .history-item {
    font-size: 0.95rem;
    font-family: 'Space Mono', monospace, system-ui;
    padding: 0.4rem 0.6rem;
    border-radius: 4px;
    background: rgba(255,255,255,0.05);
    text-align: right;
    border: none;
    width: 100%;
    cursor: pointer;
    transition: background 0.15s ease;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .history-item:hover {
    background: rgba(255,255,255,0.1);
  }

  .history-item .round-num {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .history-item.penalty { color: var(--accent-red); }
  .history-item.winner-round { color: var(--accent-green); }

  /* Bottom Actions */
  .bottom-bar {
    padding: 1rem;
    background: linear-gradient(0deg, var(--bg-dark) 0%, transparent 100%);
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.75rem;
    border: none;
    border-radius: 12px;
    font-family: inherit;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
  }

  .btn:active {
    transform: scale(0.95);
  }

  .btn-large {
    flex: 1;
    min-width: calc(50% - 0.5rem);
    padding: 1rem;
    border-radius: 16px;
    font-size: 1rem;
  }

  .btn-add-player {
    background: linear-gradient(135deg, var(--accent-yellow), #f59e0b);
    color: var(--bg-dark);
  }

  .btn-add-round {
    background: linear-gradient(135deg, var(--accent-green), #06b6b3);
    color: var(--bg-dark);
  }

  .btn-new-game {
    background: rgba(255,255,255,0.1);
    color: var(--text-light);
  }

  .btn-settings {
    background: rgba(255,255,255,0.08);
    color: var(--text-muted);
  }

  .btn-rules {
    background: rgba(255,255,255,0.05);
    color: var(--text-muted);
    min-width: 100%;
  }

  /* Modal */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.8);
    backdrop-filter: blur(4px);
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .modal {
    background: var(--bg-card);
    border-radius: 24px;
    padding: 1.5rem;
    width: 100%;
    max-width: 400px;
    max-height: 90vh;
    overflow-y: auto;
  }

  .modal-round {
    max-width: 360px;
  }

  .modal h2 {
    text-align: center;
    margin-bottom: 1rem;
    color: var(--accent-yellow);
  }

  .modal-hint {
    text-align: center;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .modal-close {
    background: var(--accent-red);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 12px;
    font-family: inherit;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    margin-top: 1rem;
  }

  .confirm-text {
    text-align: center;
    margin: 1rem 0;
    color: var(--text-muted);
  }

  .modal-small {
    max-width: 280px;
  }

  .modal-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .btn-confirm-action,
  .btn-cancel-action {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 12px;
    font-family: inherit;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-confirm-action {
    background: var(--accent-red);
    color: white;
  }

  .btn-cancel-action {
    background: rgba(255,255,255,0.1);
    color: var(--text-light);
  }

  /* Round Score Modal */
  .round-players {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .round-player-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: rgba(255,255,255,0.05);
    border-radius: 12px;
    cursor: pointer;
    border: 2px solid transparent;
    transition: all 0.2s ease;
  }

  .round-player-row.active {
    border-color: var(--accent-purple);
    background: rgba(181, 55, 242, 0.1);
  }

  .round-player-row.winner {
    border-color: var(--accent-green);
    background: rgba(8, 217, 214, 0.1);
  }

  .round-player-name {
    flex: 1;
    font-weight: 600;
  }

  .round-player-score {
    font-family: 'Space Mono', monospace, system-ui;
    font-size: 1.2rem;
    min-width: 50px;
    text-align: right;
  }

  .round-player-score .placeholder {
    color: var(--text-muted);
    opacity: 0.5;
  }

  .round-player-score .winner-zero {
    color: var(--accent-green);
  }

  .btn-winner {
    width: 36px;
    height: 36px;
    border: none;
    border-radius: 50%;
    background: rgba(255,255,255,0.1);
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .btn-winner.selected {
    background: var(--accent-green);
    box-shadow: 0 0 10px rgba(8, 217, 214, 0.5);
  }

  /* Numpad */
  .numpad {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.5rem;
  }

  .numpad-btn {
    padding: 1rem;
    font-size: 1.5rem;
    font-family: 'Space Mono', monospace, system-ui;
    font-weight: 700;
    border: none;
    border-radius: 12px;
    background: rgba(255,255,255,0.1);
    color: var(--text-light);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .numpad-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .numpad-btn:active:not(:disabled) {
    transform: scale(0.95);
    background: rgba(255,255,255,0.2);
  }

  .numpad-btn.clear {
    background: var(--accent-red);
    color: white;
  }

  .numpad-btn.backspace {
    background: var(--accent-purple);
    color: white;
  }

  .numpad-btn.confirm {
    background: linear-gradient(135deg, var(--accent-green), #06b6b3);
    color: var(--bg-dark);
    grid-column: span 3;
  }

  /* Quick Score Buttons */
  .quick-scores {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .quick-btn {
    flex: 1;
    min-width: calc(33% - 0.5rem);
    padding: 0.5rem;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 8px;
    color: var(--text-muted);
    font-family: inherit;
    font-size: 0.85rem;
    cursor: pointer;
  }

  .quick-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .quick-btn:active:not(:disabled) {
    background: rgba(255,255,255,0.1);
  }

  /* Settings Modal */
  .settings-section {
    margin-bottom: 1.5rem;
  }

  .settings-section h3 {
    color: var(--accent-green);
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }

  .settings-options {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .settings-option {
    display: flex;
    flex-direction: column;
    padding: 0.75rem;
    background: rgba(255,255,255,0.05);
    border: 2px solid transparent;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .settings-option.selected {
    border-color: var(--accent-green);
    background: rgba(8, 217, 214, 0.1);
  }

  .settings-option input[type="radio"] {
    display: none;
  }

  .settings-option .option-title {
    font-weight: 600;
  }

  .settings-option .option-desc {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .settings-input-group {
    margin-top: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .settings-input-group label {
    flex: 1;
  }

  .settings-input-group input {
    width: 80px;
    padding: 0.5rem;
    font-family: 'Space Mono', monospace, system-ui;
    font-size: 1rem;
    text-align: center;
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 8px;
    color: var(--text-light);
  }

  .settings-input-group input:focus {
    outline: none;
    border-color: var(--accent-green);
  }

  /* Rules Content */
  .rules-content {
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .rules-content h3 {
    color: var(--accent-green);
    margin: 1rem 0 0.5rem;
    font-size: 1rem;
  }

  .rules-content ul {
    margin-left: 1rem;
  }

  .rules-content li {
    margin: 0.25rem 0;
  }

  .scoring-table {
    width: 100%;
    border-collapse: collapse;
    margin: 0.5rem 0;
    font-size: 0.85rem;
  }

  .scoring-table td {
    padding: 0.4rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .scoring-table td:last-child {
    text-align: right;
    color: var(--accent-yellow);
    font-family: 'Space Mono', monospace, system-ui;
  }

  /* Winner Celebration */
  .confetti {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1000;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--text-muted);
  }

  .empty-state-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  /* Footer */
  .game-footer {
    padding: 1rem;
    text-align: center;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .game-footer p {
    margin: 0;
  }

  .game-footer p + p {
    margin-top: 0.5rem;
  }

  .game-footer a {
    color: var(--text-muted);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .game-footer a:hover {
    color: var(--text-light);
  }
</style>
