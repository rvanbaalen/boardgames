---
import Layout from '../layouts/Layout.astro';
import GameCard from '../components/GameCard.astro';
import Footer from '../components/Footer.astro';

const games = [
  {
    id: 'tienduizenden',
    title: 'Tienduizenden',
    description: 'Een klassiek Nederlands dobbelspel. Gooi de dobbelstenen en probeer als eerste 10.000 punten te halen!',
    descriptionEn: 'A classic Dutch dice game. Roll the dice and be the first to reach 10,000 points!',
    players: '2-6',
    duration: '30-60 min',
    available: true,
  },
  {
    id: 'amerikaans-jokeren',
    title: 'Amerikaans Jokeren',
    description: 'Een klassiek Nederlands kaartspel. Probeer als eerste uit te gaan en vermijd strafpunten. Laagste score wint!',
    descriptionEn: 'A classic Dutch card game. Try to go out first and avoid penalty points. Lowest score wins!',
    players: '2-8',
    duration: '30-60 min',
    available: true,
  },
];

const homeSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Board Game Score Cards",
  "description": "Free digital score cards for your favorite board games. Track scores offline with no data sent to servers.",
  "url": "https://rvanbaalen.github.io/boardgames",
  "author": {
    "@type": "Person",
    "name": "Robin van Baalen",
    "url": "https://robinvanbaalen.nl"
  },
  "publisher": {
    "@type": "Person",
    "name": "Robin van Baalen",
    "url": "https://robinvanbaalen.nl"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://rvanbaalen.github.io/boardgames/?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};
---

<Layout
  title="Board Game Score Cards - Free Digital Score Tracking"
  description="Free digital score cards for your favorite board games. Track scores offline, no account needed. Supports Tienduizenden, and more games coming soon!"
  canonicalPath=""
  schema={homeSchema}
>
  <main>
    <header>
      <h1>Board Game Score Cards</h1>
      <p>Digital score tracking for your favorite board games</p>
    </header>

    <section class="games-grid">
      {games.map((game) => (
        <GameCard
          id={game.id}
          title={game.title}
          description={game.description}
          descriptionEn={game.descriptionEn}
          players={game.players}
          duration={game.duration}
          available={game.available}
        />
      ))}
    </section>

    <Footer class="page-footer" />
  </main>
</Layout>

<style>
  main {
    flex: 1;
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    text-align: center;
    margin-bottom: 3rem;
  }

  header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, var(--color-primary), #a855f7);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  header p {
    color: var(--color-text-muted);
    font-size: 1.1rem;
  }

  .games-grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    align-content: start;
  }

  .page-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-bg-card);
  }
</style>
